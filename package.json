{
  "name": "zksync-zkwallet-vue",
  "private": true,
  "author": "Matter Labs",
  "description": "zkWallet was created to unleash the power of zkSync L2 operations and give anyone an access to L2 zkSync features on mainnet",
  "version": "2.0.0-beta",
  "license": "MIT",
  "homepage": "https://wallet.zksync.io",
  "bugs": {
    "url": "https://github.com/matter-labs/zksync-wallet-vue/issues"
  },
  "dependencies": {
    "@nuxtjs/axios": "latest",
    "@nuxtjs/dotenv": "latest",
    "@nuxtjs/pwa": "latest",
    "@nuxtjs/toast": "latest",
    "@portis/web3": "^2.0.0-beta.59",
    "@walletconnect/web3-provider": "^1.0.11",
    "bnc-onboard": "latest",
    "dotenv": "latest",
    "ethereum-blockies-base64": "^1.0.2",
    "ethers": "^5.0.12",
    "js-cookie": "^2.2.1",
    "lottie-web": "^5.7.5",
    "moment": "^2.29.1",
    "nuxt": "^2.14.11",
    "nuxt-i18n": "^6.8.1",
    "vue": "^2.6.12",
    "vue-qrcode": "^0.3.5",
    "vue-recaptcha": "^1.3.0",
    "vue-scrollto": "^2.17.1",
    "walletlink": "^2.0.2",
    "web3": "^1.2.7",
    "zksync": "^0.7.4"
  },
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "test": "echo \"Not implemented.\"",
    "format": "prettier --write",
    "lint-ts": "eslint --fix \"**/*.{js, vue}\"",
    "lint-css": "stylelint --fix \"**/*.scss\"",
    "deploy_hosting": "firebase --project ${FIREBASE_PROJECT:?firebase project name not set or empty} deploy --only hosting",
    "audit_dependencies": "npm audit --package-lock-only --audit-level critical --json | npm-audit-html --output audit.html",
    "check_licenses": "license-checker --json > licenses.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --format -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{css,scss}": "npm run lint-css",
    "*.{ts,tsx}": [
      "npm run lint-ts",
      "npm run format"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-rational-order"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-scss",
      "stylelint-config-rational-order/plugin",
      "stylelint-high-performance-animation",
      "stylelint-declaration-use-variable"
    ],
    "rules": {
      "no-empty-source": [
        true,
        {
          "severity": "warning"
        }
      ],
      "plugin/no-low-performance-animation-properties": [
        true,
        {
          "severity": "warning"
        }
      ],
      "sh-waqar/declaration-use-variable": [
        [
          "/color/",
          "font-size",
          "font-family",
          "font-weight"
        ]
      ],
      "order/properties-order": [],
      "plugin/rational-order": [
        true,
        {
          "border-in-box-model": false,
          "empty-line-between-groups": false
        }
      ],
      "selector-type-no-unknown": [
        true,
        {
          "ignore": [
            "custom-elements"
          ]
        }
      ],
      "no-descending-specificity": true,
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@inkline/nuxt": "^2.3.5",
    "@nuxtjs/dotenv": "1.4.1",
    "@nuxtjs/style-resources": "^1.0.0",
    "commitlint": "^8.3.5",
    "dotenv": "8.2.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier-vue": "^2.1.1",
    "eslint-plugin-vue": "^7.0.0",
    "fs-extra": "latest",
    "lodash": "4.17.20",
    "node-sass": "latest",
    "prettier": "^2.2.1",
    "sass-loader": "latest"
  }
}
