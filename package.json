{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@portis/web3": "^2.0.0-beta.54",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.9.0",
    "@types/node": "^12.12.25",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "@walletconnect/web3-provider": "^1.0.0-beta.46",
    "antd": "^3.26.7",
    "commitlint": "^8.3.5",
    "dotenv": "^8.2.0",
    "eslint-config-prettier": "^6.9.0",
    "ethers": "^4.0.43",
    "firebase-tools": "^7.3.0",
    "fortmatic": "^1.1.3",
    "husky": "^3.1.0",
    "i": "^0.3.6",
    "mobx": "^5.15.2",
    "mobx-react-lite": "^1.5.2",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.0",
    "stylelint": "^13.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-declaration-use-variable": "^1.7.2",
    "stylelint-high-performance-animation": "^1.4.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.13.0",
    "typescript": "^3.7.5",
    "web3": "^1.2.5",
    "zksync": "^0.3.10"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint-css": "stylelint \"src/**/*.{scss,css}\" --fix",
    "deploy_hosting": "firebase deploy --only hosting"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format && npm run lint-css && git add",
      "commit-msg": "commitlint --format -E HUSKY_GIT_PARAMS"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-rational-order"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-scss",
      "stylelint-config-rational-order/plugin",
      "stylelint-high-performance-animation",
      "stylelint-declaration-use-variable"
    ],
    "rules": {
      "no-empty-source": [
        true,
        {
          "severity": "warning"
        }
      ],
      "plugin/no-low-performance-animation-properties": [
        true,
        {
          "severity": "warning"
        }
      ],
      "sh-waqar/declaration-use-variable": [
        [
          "/color/",
          "font-size",
          "font-family",
          "font-weight"
        ]
      ],
      "order/properties-order": [],
      "plugin/rational-order": [
        true,
        {
          "border-in-box-model": false,
          "empty-line-between-groups": false
        }
      ],
      "selector-type-no-unknown": [
        true,
        {
          "ignore": [
            "custom-elements"
          ]
        }
      ],
      "no-descending-specificity": true,
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "npm": "^6.13.7"
  }
}
