{
  "name": "zksync-zkwallet-vue",
  "author": "Matter Labs",
  "private": true,
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "version": "2.1.0-beta",
  "homepage": "https://wallet.zksync.io",
  "description": "zkWallet was created to unleash the power of zkSync L2 operations and give anyone an access to L2 zkSync features on mainnet",
  "bugs": {
    "url": "https://github.com/matter-labs/zksync-wallet-vue/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --format -E HUSKY_GIT_PARAMS"
    }
  },
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://www.opensource.org/licenses/mit-license.php"
    },
    {
      "type": "Apache-2.0",
      "url": "https://opensource.org/licenses/apache2.0.php"
    }
  ],
  "lint-staged": {
    "*.{css,scss}": "yarn run lint-css",
    "*.{ts,tsx}": [
      "yarn run lint-ts",
      "yarn run format"
    ]
  },
  "optionalDependencies": {
    "@sentry/webpack-plugin": "^1.14.0",
    "fs-extra": "^9.0.1"
  },
  "scripts": {
    "ci": "rm -fr node_modules && rm -rf 'public/*' && yarn install --frozen-lockfile",
    "ci:build": "yarn ci && sh ./cli-process-env.sh \"$NETWORK\" && yarn generate --fail-on-error",
    "start:firebase": "firebase serve --only hosting",
    "deploy:prod": "./cli-deploy-production.sh",
    "dev": "sh cli-process-env.sh 'rinkeby' 'dev' && nuxt",
    "prepare_ci": "yarn ci && sh cli-process-env.sh 'rinkeby'",
    "start": "sh sh cli-process-env.sh 'rinkeby' 'dev' && nuxt start",
    "build": "sh cli-process-env.sh 'mainnet' 'prod' true && nuxt build",
    "build:stage": "yarn ci && sh cli-process-env.sh 'rinkeby' 'dev' && yarn generate --fail-on-error",
    "generate": "nuxt generate",
    "test": "jest",
    "format": "prettier --write",
    "lint-ts": "eslint --fix \"**/*.{ts, js, vue}\"",
    "lint-css": "stylelint --fix \"**/*.scss\"",
    "cypress": "./node_modules/.bin/cypress open"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-rational-order"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-scss",
      "stylelint-config-rational-order/plugin"
    ],
    "rules": {
      "no-empty-source": [
        true,
        {
          "severity": "warning"
        }
      ],
      "order/properties-order": [],
      "plugin/rational-order": [
        true,
        {
          "border-in-box-model": false,
          "empty-line-between-groups": false
        }
      ],
      "selector-type-no-unknown": [
        true,
        {
          "ignore": [
            "custom-elements"
          ]
        }
      ],
      "no-descending-specificity": true,
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true
    }
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/runtime": "^7.12.5",
    "@ethersproject/logger": "^5.0.8",
    "@matterlabs/zk-wallet-onboarding": "^1.18.6",
    "@nuxtjs/axios": "latest",
    "@nuxtjs/google-gtag": "^1.0.4",
    "@nuxtjs/pwa": "^3.3.5",
    "@nuxtjs/sentry": "^5.0.0",
    "@nuxtjs/toast": "latest",
    "@types/lodash": "^4.14.167",
    "@walletconnect/web3-provider": "^1.3.1",
    "ethereum-blockies-base64": "^1.0.2",
    "ethers": "^5.0.12",
    "js-cookie": "^2.2.1",
    "lottie-web": "^5.7.5",
    "moment": "^2.29.1",
    "nuxt": "^2.14.12",
    "nuxt-i18n": "^6.8.1",
    "nuxt-webfontloader": "^1.1.0",
    "qrcode": "^1.0.0",
    "surge": "^0.21.7",
    "vue": "^2.6.12",
    "vue-property-decorator": "^9.1.2",
    "vue-qrcode": "^0.3.5",
    "vue-recaptcha": "^1.3.0",
    "vue-scrollto": "^2.17.1",
    "walletlink": "^2.0.2",
    "web3": "^1.3.1",
    "zksync": "^0.8.4"
  },
  "devDependencies": {
    "@inkline/nuxt": "^2.3.5",
    "@nuxt/types": "^2.14.12",
    "@nuxt/typescript-build": "^2.0.3",
    "@nuxtjs/dotenv": "1.4.1",
    "@nuxtjs/eslint-config-typescript": "^6.0.0",
    "@nuxtjs/style-resources": "^1.0.0",
    "@rsksmart/mock-web3-provider": "^0.0.1",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "@vue/test-utils": "^1.1.3",
    "babel-core": "^7.0.0-bridge.0",
    "commitlint": "^11.0.0",
    "cypress": "^6.4.0",
    "dotenv": "8.2.0",
    "enzyme": "^3.11.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-prettier-vue": "^2.1.1",
    "eslint-plugin-vue": "^7.0.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "jest": "^26.6.3",
    "lodash": "4.17.20",
    "node-sass": "latest",
    "prettier": "^2.2.1",
    "sass-loader": "^10.1.1",
    "stylelint": "^13.12.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-high-performance-animation": "^1.5.2",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.2.3",
    "vue-class-component": "^7.2.6",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^5.11.1"
  },
  "eslintConfig": {
    "extends": "@nuxtjs/eslint-config-typescript"
  }
}
