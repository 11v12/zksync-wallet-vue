{
  // extend your base config so you don't have to redefine your compilerOptions
  "extends": "./tsconfig.json",
  "include": [
    "**/*.ts",
    "**/*.vue",
    "**/*.js"
  ],
  "exclude": [
    "tests/*",
    "src/assets/fonts/*"
  ],
  "compilerOptions": {
    "rootDir": ".src/",
    "lib": [
      "ES2019",
      "dom",
      "node"
    ]
  }
}
