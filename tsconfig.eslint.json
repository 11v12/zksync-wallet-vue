{
  // extend your base config so you don't have to redefine your compilerOptions
  "extends": "./tsconfig.json",
  "include": [
    "**/*.ts",
    "**/*.vue",
    "**/*.js"
  ],
  "exclude": [
    "tests/*",
    "src/assets/fonts/*"
  ],
  "compilerOptions": {
    "lib": [
      "es2019",
      "es2019.object",
      "esnext",
      "esnext.asynciterable",
      "dom"
    ]
  }
}
