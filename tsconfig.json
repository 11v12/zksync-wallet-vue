{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/vue-app",
      "nuxt-typed-vuex",
      "typed-vuex",
      "@nuxtjs/sentry",
      "@nuxt/http",
      "@nuxtjs/toast",
      "web3-core/types",
      "@inkline/inkline/types"
    ]
  },
  "exclude": [
    "tests/*"
  ]
}
