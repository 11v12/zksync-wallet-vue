{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
//    "noImplicitAny": false,
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "@nuxt/types",
      "@types/node",
      "@types/jest",
      "@nuxt/vue-app",
      "@nuxt/types",
      "nuxt-typed-vuex",
      "@nuxtjs/sentry",
      "@nuxt/http",
      "@nuxtjs/toast",
      "web3-core/types",
      "@inkline/inkline/types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    ".yarn",
    "public",
    ".nuxt",
    ".github",
    "environments",
    "tests"
  ]
}
